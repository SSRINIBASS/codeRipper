# Application
APP_NAME=repo-intelligence
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/repo_intelligence

# Storage
STORAGE_PATH=./data

# Hugging Face (for text generation)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
EMBEDDING_MODEL=all-MiniLM-L6-v2
LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_HEADER=X-API-Key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Repository Limits
MAX_REPO_SIZE_MB=200
MAX_FILES=10000
MAX_FILE_SIZE_MB=2
MAX_INDEXING_MINUTES=10
MAX_CHUNKS=50000

# Vector Search
SIMILARITY_THRESHOLD=0.65
SEARCH_TOP_K=10

# Tutor
MAX_CONVERSATION_TOKENS=500
MAX_CONVERSATION_HISTORY=5
SESSION_TTL_HOURS=24
